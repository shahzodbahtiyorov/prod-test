<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:id="@+id/home_card"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/card_background">

        <ImageView
            android:id="@+id/home_card_type"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_uzcard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/home_card_balance_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10,600,000 UZS"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_card_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_card_mask_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="•• 1289 | Card holder name"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/home_card_balance_text"
            app:layout_constraintStart_toEndOf="@id/home_card_type"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:layout_marginTop="4dp"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
