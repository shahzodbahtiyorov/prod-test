<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="0dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Платеж был успешно проведен"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imgSuccessIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/circle_check_alt"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998 (94) 999-99-99"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="100 000 UZS"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <LinearLayout
            android:id="@+id/buttonsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_white_background"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/btnClose"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/save_payments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_oplata_save"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить платеж"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Payment Details Button -->
            <LinearLayout
                android:id="@+id/payment_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_detail"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Детали оплаты"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Repeat Payment Button -->
            <LinearLayout
                android:id="@+id/repeat_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_repetition"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Повторить платеж"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отлично, закрыть"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            app:elevation="0dp"
            android:elevation="0dp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</LinearLayout>
