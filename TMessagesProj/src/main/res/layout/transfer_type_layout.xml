<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header Text -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как отправить деньги?"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- Option 1: UZCard/Humo Transfer -->
    <LinearLayout
        android:id="@+id/humo_uzcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_white"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/humo_uzcard_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_transfer_humo_uzcard"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/humo_uzcard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Перевод на карты Uzcard/Humo"
            android:textSize="14sp"
            android:textColor="#333333"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Option 2: International Transfers -->
    <LinearLayout
        android:id="@+id/international_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_white"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/international_transfer_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_international_transfer"
            android:contentDescription="International Transfer Icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/international_transfer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Международные переводы"
            android:textSize="14sp"
            android:textColor="#333333"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Option 3: Visa Card Transfer -->
    <LinearLayout
        android:id="@+id/transfer_visa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background_white"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/transfer_visa_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_transfer_visa"
            android:contentDescription="Visa Icon"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/transfer_visa_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Переводы на карты Visa"
            android:textSize="14sp"
            android:textColor="#333333"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>
